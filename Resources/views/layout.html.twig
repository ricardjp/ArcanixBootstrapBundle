{% from 'ArcanixBootstrapBundle::flash.html.twig' import session_flash %}
{% if form is defined %}
    {% form_theme form 'ArcanixBootstrapBundle:Form:fields.html.twig' %}
{% endif %}
{% block doctype %}<!DOCTYPE html>{% endblock %}
<html>
    {% block head %}
        <head>
	    <meta charset="utf-8">
	    <title>{% block title %}{% endblock %}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

                {% stylesheets
                    '@bootstrap_css'
                    '@ArcanixBootstrapBundle/Resources/public/css/arcanix-bootstrap.min.css' output="css/bootstrap.min.css" %}
                    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
                {% endstylesheets %}
                
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
			<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
		<![endif]-->

	    {# Fav and touch icons #}
	    {% block favicons %}{% endblock %}
        </head>
    {% endblock %}

    {% block body %}
        <body>

            {% block page_header %}{% endblock %}

	    <div class="container">

                {% block header %}{% endblock %}

                <div class="row">
                    {% block content %}{% endblock %}
                </div><!--/row-->

                {% block footer %}{% endblock %}

	    </div>

	    {% block page_footer %}{% endblock %}

	    {% block foot_script %}
            
	            {# add jquery #}
                    <script src="{{ asset("js/jquery.min.js") }}"></script>
                    
	            {# add bootstrap scripts #}
                    <script src="{{ asset("js/bootstrap.min.js") }}"></script>
                    
	    {% endblock %}

	  </body>
    {% endblock %}
</html>
