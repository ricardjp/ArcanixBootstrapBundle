{% from 'ArcanixBootstrapBundle::flash.html.twig' import session_flash %}
{% form_theme form 'ArcanixBootstrapBundle:Form:fields.html.twig' %}
{% block doctype %}<!DOCTYPE html>{%  endblock %}
<html>
    {% block head %}
        <head>
	    <meta charset="utf-8">
	    <title>{% block title %}{% endblock %}</title>
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    
            {% stylesheets '@bootstrap_less' '@bootstrap_responsive_less' output="css/bootstrap.css" combine=true %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
		
	    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
	    <!--[if lt IE 9]>
	      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	    <![endif]-->
	
	    {# Fav and touch icons #}
	    {% block favicons %}{% endblock %}
        </head>
    {% endblock %}

    {% block body %}
        <body>
            
            {% block page_header %}{% endblock %}
                
	    <div class="container-fluid">
                <i class="icon-search"></i>
                
                {% block header %}{% endblock %}
	    
                <div class="row-fluid">
                    {% block content %}{% endblock %}
                </div><!--/row-->
			
                {% block footer %}{% endblock %}
	
	    </div>
                
	    {% block page_footer %}{% endblock %}
            
            {# add jquery #}
            {% javascripts '@jquery' output="js/jquery.js" combine=true %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
                
            {# add bootstrap scripts #}
            {% javascripts '@bootstrap_js' output="js/bootstrap.js" combine=true %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
                
	  </body>
    {% endblock %}
</html>
