{% from 'ArcanixBootstrapBundle::flash.html.twig' import session_flash %}
{% block doctype %}<!DOCTYPE html>{%  endblock %}
<html>
	{% block head %}
	  <head>
	    <meta charset="utf-8">
	    <title>{% block title %}{% endblock %}</title>
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    
	    {% stylesheets '@bootstrap_less' '@bootstrap_responsive_less' combine=true %}
	    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
		{% endstylesheets %}
		
	    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
	    <!--[if lt IE 9]>
	      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	    <![endif]-->
	
	    {# Fav and touch icons #}
	    {% block favicons %}{% endblock %}
	  </head>
  {% endblock %}

  {% block body %}
	  <body>
		{% block page_header %}{% endblock %}
	    <div class="container-fluid">
	    	
	    	{% block header %}{% endblock %}
	    
	      <div class="row-fluid">
	      	{% block content %}{% endblock %}
	      </div><!--/row-->
			
	      {% block footer %}{% endblock %}
	
	    </div><!--/.fluid-container-->
	    {% block page_footer %}{% endblock %}
	
	    <script src="{{ asset("bundles/sonatajquery/jquery-1.8.0.js") }}"></script>
		{% javascripts '@bootstrap_js' combine=true %}
			<script src="{{ asset_url }}"></script>
	  	{% endjavascripts %}
	  </body>
  {% endblock %}
</html>
