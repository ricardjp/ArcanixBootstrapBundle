{% from 'ArcanixBootstrapBundle::flash.html.twig' import session_flash %}
{% if form is defined %}
    {% form_theme form 'ArcanixBootstrapBundle:Form:fields.html.twig' %}
{% endif %}
{% block doctype %}<!DOCTYPE html>{%  endblock %}
<html>
    {% block head %}
        <head>
	    <meta charset="utf-8">
	    <title>{% block title %}{% endblock %}</title>
            <meta name="viewport" content="width=device-width, initial-scale=1.0">

            {% stylesheets '@bootstrap_less' output="css/bootstrap.css" combine="true" %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}

	    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
	    <!--[if lt IE 9]>
	      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	    <![endif]-->

	    {# Fav and touch icons #}
	    {% block favicons %}{% endblock %}
        </head>
    {% endblock %}

    {% block body %}
        <body>

            {% block page_header %}{% endblock %}

	    <div class="container-fluid">

                {% block header %}{% endblock %}

                <div class="row-fluid">
                    {% block content %}{% endblock %}
                </div><!--/row-->

                {% block footer %}{% endblock %}

	    </div>

	    {% block page_footer %}{% endblock %}

	    {% block foot_script %}
	            {# add jquery #}
	            {% javascripts '@jquery' output="js/jquery.js" combine=true %}
	                <script src="{{ asset_url }}"></script>
	            {% endjavascripts %}

	            {# add jquery-ui #}
	            {% javascripts '@jqueryui' output="js/jquery-ui.js" combine=true %}
	                <script src="{{ asset_url }}"></script>
	            {% endjavascripts %}

	            {# add jquery-ui-i18n #}
	            {% javascripts '@jqueryuii18n' output="js/jquery-ui-i18n.js" combine=true %}
	                <script src="{{ asset_url }}"></script>
	            {% endjavascripts %}

	            {# add bootstrap scripts #}
	            {% javascripts '@bootstrap_js' output="js/bootstrap.js" combine=true %}
	                <script src="{{ asset_url }}"></script>
	            {% endjavascripts %}
	    {% endblock %}

	  </body>
    {% endblock %}
</html>
